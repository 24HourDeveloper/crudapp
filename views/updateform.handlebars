<div class="form-container">
    <div class="form">
        <form action="/userupdated" method="POST">
            <label for="index">Choose ID</label>
            <input type="number" name="id" id="index">
            <label for="fname">New First Name</label>
            <input type="text" name="name1" id="fname">
            <label for="lname">New Last Name</label>
            <input type="text" name="name2" id="lname">
            <input type="submit" value="Submit">
            <div class="update-user"><a href="/adduser">Go To Add User Page</a></div>
        </form>
    </div>
</div>

<div class="person-list">
    <ul>
        {{#each fname}}
        <li>[{{this.id}}] {{this.first_name}}-{{this.last_name}}</li>
        {{/each}}
    </ul>
</div>